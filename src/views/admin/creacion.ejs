<head>
<%- include('../partials/head')  %>
<title>Administrar</title> 
</head>

<body>
    <%- include('../partials/header')  %>
    <main>
        <br>
        <form id ="crearProde" action = "/prode/crear" method="POST">
            <h1>Crea tu prode</h1>
            <div class = "creacion">
            <label for="nombre">Nombre del prode</label>
            <input type="text" name="nombre">
            <br>
            <br>
            <label for="teamnum">Numero de equipos:</label>
            <select name = "teamnum">
                <option>Select a number</option>
                <% for( let i = 1; i <=20 ; i++ ) { %>
                    <option><%=i%></option>
                <% } %>
            </select>
            <br>
            <br>
            <label for="groupnum">Numero de grupos</label>
            <select name = "groupnum">
                <option>Select a number</option>
                <% for( let i = 1; i < 5; i++)  { %>     
                    <option><%= i%></option>
                <% } %>
            </select>
            <br>
            <br>
            <label for="usernum">Numero de participantes</label>
            <select name = "usernum">
                <option>Select a number</option>
                <% for( let i = 1; i < 20; i++)  { %>     
                    <option><%= i%></option>
                <% } %>
            </select>
            <br>
            <br>
            <button type="reset">Resetear</button>
            <button type = "submit">Crear</button>
            </div>    
         
             <% if (prodes!= "") { %>
                <h2>Tus prodes:</h2>
                <div class = "prodes">
                    <% for( let i = 0; i < prodes.length; i++ ) { %>
                        <article class ="prode">
                            <a href="#">
                            <h1>prode numero <%=i+1  %> </h1>
                            </a>
                        </article>
                    <% } %>
    
                </div>
               
             
            <% } %>
        </form>

   
    

    </main>
</body>