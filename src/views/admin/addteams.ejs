<head>
<%- include('../partials/head')  %> 
<title>Equipos</title>
</head>

<body>
    <%- include('../partials/header')  %> 
    <main>
        <h1 id ="titulo">Crear equipos para el prode: <%=prode.id%></h1>
            <div class = "crearEquipos">
        <% for( let i = 0; i < prode.groupnum; i++ ) { %>
            <div class = "grupo">
                <h2>Grupo numero: <%=i+1%> </h2>
                <% for( let j = 0; j < (prode.teamnum /2); j++ ) { %>
                        <form action = "/prode/crearEquipos?id=<%=prode.id%>&numeroDeGrupo=<%=i+1%>&numeroDeEquipo=<%=j+1%>"  enctype="multipart/form-data" class="equiposForm" method="POST">
                        <div class = "equipo">
                        <label for="nombre">Nombre</label>
                        <input type="text" name = "nombre">
                        <label for="bandera">Seleccione la bandera</label>
                        <input type="file" name = "bandera"> 
                        <button type="submit">Crear</button>
                        </div>
                        </form>
                <% } %>
            </div>
        <% } %>
    </div>
        
        </form>

    </main>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script>
    $(document).ready(function() {
        $('a[href^="#"]').click(function() {
          var destino = $(this.hash);
          if (destino.length == 0) {
            destino = $('a[name="' + this.hash.substr(1) + '"]');
          }
          if (destino.length == 0) {
            destino = $('html');
          }
          $('html, body').animate({ scrollTop: destino.offset().top }, 2000);
          return false;
        });
      });
      </script>
      <script>
    
          $(document).ready(function(){
              $(".menu_mobile_bt").click(function(){
                  $(".menu_over").slideToggle();
                });
            });
            $( window ).resize(function() {
                setMenuDisplay();
                closeMenu($(".menu_mobile_bt"));
            });
        </script>
</body>