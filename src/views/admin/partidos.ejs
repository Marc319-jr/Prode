<head>
<%- include('../partials/head')  %> 
<title>Editar Prode</title>
</head>


<body>
    <%- include('../partials/header') %>
    <main>
        <h1 id ="titulo">Crear partidos para el prode: <%=prode.nombre%></h1>
        <div class = "crearEquipos">
            <% for( let i = 0; i < prode.cantgrupos; i++ ) { %>
                <div class = "grupo">
                    <% for( let j = 0; j < prode.cantequipos; j++ ) { %>
                        <form method="POST" action="/prode/crearPartido" class="partido">
                            <div class="equipo">
                                <div class = "partido">
                            <select>
                                <option value="">Sellecione equipo</option>
                                <option>grupo: <%=i+1%> partido: <%= j+1  %>  </option>
                            </select>
                            <h4>VS</h4>
                            <select>
                                <option value="">Selecione equipo</option>
                            </select>
                                </div>
                                <br>
                            <label for="estadio">Estadio:</label>
                            <input type="text" name = "estadio">
                            <label for="fecha">Fecha:</label>
                            <input type="date" name  ="fecha">
                            <button type="submit">Crear</button>
                            </div>
                        </form>
                    <% } %>

                </div>
            
            <% } %>
        </div>
    </main>
</body>